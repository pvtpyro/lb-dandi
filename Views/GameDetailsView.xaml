<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:Unbroken.LaunchBox.Windows.Desktop.Controls;assembly=LaunchBox"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:panel="clr-namespace:Unbroken.LaunchBox.Windows.Controls;assembly=Unbroken.LaunchBox.Windows"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:behaviors="clr-namespace:Unbroken.LaunchBox.Windows.Behaviors;assembly=Unbroken.LaunchBox.Windows"
    xmlns:cal="http://www.caliburnproject.org"
    mc:Ignorable="d" 
    d:DesignHeight="300"
    d:DesignWidth="300"
    Focusable="False"
    FontFamily="Play"
    FontSize="{Binding LargeFontSize}"
    FontWeight="{Binding LargeFontWeight}"
    FontStyle="{Binding LargeFontWeight}">
    
    <UserControl.Resources>
        <Style x:Key="FocusVisualStyle">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle StrokeThickness="1" Stroke="{Binding ForegroundBrush}" SnapsToDevicePixels="true">
                            <Rectangle.Effect>
                                <DropShadowEffect ShadowDepth="1" Direction="315" Color="Black" Opacity="0.9" BlurRadius="2" />
                            </Rectangle.Effect>
                        </Rectangle>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#0d0c0c">

        <Grid Height="200" VerticalAlignment="Top">
            <Image Source="pack://siteoforigin:,,,/LBThemes/Dandi/Images/arcade.jpg" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Stretch="UniformToFill" Grid.ColumnSpan="5" Grid.RowSpan="4">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GameBackgroundImage}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <Image VerticalAlignment="Top" Source="{Binding GameBackgroundImage}" Stretch="UniformToFill" />
			
            <Viewbox MaxHeight="200" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" StretchDirection="Both">
                <TextBlock Margin="50,0,50,0" VerticalAlignment="Center" Text="{Binding Game.Title}" TextTrimming="CharacterEllipsis" Foreground="#ffffff" Panel.ZIndex="2">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="0" Direction="315" Color="#CB0100" Opacity="1" BlurRadius="2" />
                    </TextBlock.Effect>
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding GameBackgroundImage}" Value="{x:Null}" />
                                        <Condition Binding="{Binding Game.ClearLogoImagePath}" Value="{x:Null}" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Viewbox>
            <Image MaxWidth="250" MaxHeight="150" Margin="0,40,0,0" HorizontalAlignment="center" Source="{Binding Game.ClearLogoImagePath}" RenderOptions.BitmapScalingMode="HighQuality" Panel.ZIndex="5">
                <!--<Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GameBackgroundImage}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>-->
            </Image>

            <!--<Grid.OpacityMask>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#61ffffff" Offset="0"/>
                    <GradientStop Color="#e0ffffff" Offset="0.45"/>
                    <GradientStop Color="#e0ffffff" Offset="0.55"/>
                    <GradientStop Color="#00ffffff" Offset="1"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>-->

            <!--<Grid.Background>
                <RadialGradientBrush GradientOrigin="0.2,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="yellow"/>
                    <GradientStop Color="yellow" Offset="0.20"/>
                    <GradientStop Color="orange" Offset="0.20"/>
                    <GradientStop Color="orange" Offset="0.50"/>
                    <GradientStop Color="red" Offset="0.50"/>
                    <GradientStop Color="red" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>-->
            <!--<Rectangle Fill="red" />-->
            
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#99404041"/>
                        <GradientStop Color="#99404041" Offset="0.20"/>
                        <GradientStop Color="#4d404041" Offset="0.30"/>
                        <GradientStop Color="#4d404041" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>
        </Grid>
        
        <Grid Margin="5 5 5 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- star rating-->
            <Grid Name="StarRatingGrid" Grid.Row="0" Grid.Column="0" Margin="0,-3,0,0" Visibility="{Binding StarRatingVisibility}" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="{Binding StarRatingText}">
                <TextBlock Name="StarRatingFaded" HorizontalAlignment="Left" Text="★★★★★" Foreground="#33FFFFFF" FontSize="24" FontFamily="Segoe UI" FontWeight="Normal" FontStyle="Normal" />
                <TextBlock Name="StarRating" HorizontalAlignment="Left" Text="★★★★★" Foreground="#dd2020" FontSize="24" FontFamily="Segoe UI" FontWeight="Normal" FontStyle="Normal" Width="{Binding StarRatingWidth}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#dd2020" BlurRadius="5" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
            
            <!-- mark complete, fav, edit, close buttons-->
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 0 -6 0">

				<!-- var dump -->
				<!-- <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding FavoriteBrush}" TextAlignment="Center" Foreground="red" Panel.ZIndex="999" ></TextBlock> -->

				<TextBlock x:Name="CompleteTrigger" Visibility="Collapsed" Text="{Binding CompleteBrush}" Height="0" />
                <Button Name="Complete" ToolTip="{Binding CompleteLabel}" Width="34" Height="31" Background="Transparent" BorderThickness="0" Visibility="{Binding CompleteVisibility}" FocusVisualStyle="{StaticResource FocusVisualStyle}">
                    <Grid Width="34" Height="31" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.Effect>
							<DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="1" Color="#1FDE55" Direction="315"/>
                        </Grid.Effect>
						<Path Width="15" Height="15" Stretch="Uniform" Data="M438.6 105.4C451.1 117.9 451.1 138.1 438.6 150.6L182.6 406.6C170.1 419.1 149.9 419.1 137.4 406.6L9.372 278.6C-3.124 266.1-3.124 245.9 9.372 233.4C21.87 220.9 42.13 220.9 54.63 233.4L159.1 338.7L393.4 105.4C405.9 92.88 426.1 92.88 438.6 105.4H438.6z">
							<Path.Style>
								<Style> 
									<!-- todo: might need to change back to Binding CompleteBrush for reactivity -->
									<Style.Triggers> 
										<DataTrigger Binding="{Binding Text, ElementName=CompleteTrigger}" Value="#FF00BB00"> 
											<Setter Property = "Path.Fill" Value = "#1FDE55"/> 
										</DataTrigger> 
										<DataTrigger Binding="{Binding Text, ElementName=CompleteTrigger}" Value="#FFF5EDF1"> 
											<Setter Property = "Path.Fill" Value = "#4dffffff"/> 
										</DataTrigger> 
									</Style.Triggers> 
									<Setter Property = "Path.Fill" Value = "#4dffffff"/> 
								</Style> 
							</Path.Style>
						</Path>
                    </Grid>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Name="Border" BorderThickness="0" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Top" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#33FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <!-- <Button.Effect>
                        <DropShadowEffect ShadowDepth="0" Direction="315" Color="Black" Opacity="0.6" BlurRadius="2" />
                    </Button.Effect> -->
                </Button>

				<TextBlock x:Name="FavoriteTrigger" Visibility="Collapsed" Text="{Binding FavoriteBrush}" Height="0" />
                <Button Name="Favorite" ToolTip="{Binding FavoriteLabel}" Width="34" Height="31" Background="Transparent" BorderThickness="0" Visibility="{Binding FavoriteVisibility}" FocusVisualStyle="{StaticResource FocusVisualStyle}">
                    <Grid Width="34" Height="31" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.Effect>
                            <!-- <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.6" BlurRadius="2" /> -->
							<DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="1" Color="#CB0100" Direction="315"/>
                        </Grid.Effect>
						<Path Width="15" Height="15" Stretch="Uniform" Data="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9L464.4 300.4c30.4-28.3 47.6-68 47.6-109.5v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5z">
							<Path.Style>
								<Style> 
									<!-- todo: might need to change back to Binding FavoriteBrush for reactivity -->
									<Style.Triggers> 
										<DataTrigger Binding="{Binding Text, ElementName=FavoriteTrigger}" Value="#FFBB000B"> 
											<Setter Property = "Path.Fill" Value = "#CB0100"/> 
										</DataTrigger> 
										<DataTrigger Binding="{Binding Text, ElementName=FavoriteTrigger}" Value="#FFF5EDF1"> 
											<Setter Property = "Path.Fill" Value = "#4dffffff"/> 
										</DataTrigger> 
									</Style.Triggers> 
									<Setter Property = "Path.Fill" Value = "#4dffffff"/> 
								</Style> 
							</Path.Style>
						</Path>
                    </Grid>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Name="Border" BorderThickness="0" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Top" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#33FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <!-- <Button.Effect>
                        <DropShadowEffect ShadowDepth="0" Direction="315" Color="#ff0099" Opacity="1" BlurRadius="2" />
                    </Button.Effect> -->
                </Button>

                <Button Name="Edit" ToolTip="{Binding EditLabel}" Width="34" Height="31" Background="Transparent" BorderThickness="0" Visibility="{Binding EditVisibility}" FocusVisualStyle="{StaticResource FocusVisualStyle}">
                    <Grid Width="34" Height="31" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.Effect>
                            <DropShadowEffect ShadowDepth="0" Direction="315" Color="Black" Opacity="0.6" BlurRadius="2" />
                        </Grid.Effect>
						<Path Width="15" Height="15" Stretch="Uniform" Fill="{Binding ForegroundBrush}" Data="M10.2 461L0 512l51-10.2L160 480 420.7 219.3l-128-128L32 352 10.2 461zM315.3 68.7l128 128 34.7-34.7L512 128l-16-16L478.1 94.1 417.9 33.9 400 16 384 0 350.1 33.9 315.3 68.7zM96 416h60.1l-19.8 19.8-75.1 15 15-75.1L96 355.9V416z"/>
                    </Grid>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Name="Border" BorderThickness="0" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Top" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#33FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <!-- <Button.Effect>
                        <DropShadowEffect ShadowDepth="0" Direction="315" Color="Black" Opacity="0.6" BlurRadius="2" />
                    </Button.Effect> -->
                </Button>
				
                <Button Name="Close" ToolTip="{Binding CloseLabel}" Width="34" Height="31" Background="Transparent" BorderThickness="0" FocusVisualStyle="{StaticResource FocusVisualStyle}">
                    <Grid Width="35" Height="31" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Grid.Effect>
                            <DropShadowEffect ShadowDepth="0" Direction="315" Color="Black" Opacity="0.6" BlurRadius="2" />
                        </Grid.Effect>
						<Path Width="15" Height="15" Stretch="Uniform" Fill="{Binding ForegroundBrush}" Data="M294.6 166.6L317.3 144 272 98.7l-22.6 22.6L160 210.7 70.6 121.4 48 98.7 2.7 144l22.6 22.6L114.7 256 25.4 345.4 2.7 368 48 413.3l22.6-22.6L160 301.3l89.4 89.4L272 413.3 317.3 368l-22.6-22.6L205.3 256l89.4-89.4z"/>
                    </Grid>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Name="Border" BorderThickness="0" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Top" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#33FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInWindow}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <!-- <Button.Effect>
                        <DropShadowEffect ShadowDepth="0" Direction="315" Color="Black" Opacity="0.6" BlurRadius="2" />
                    </Button.Effect> -->
                </Button>
            </StackPanel>
            
			<!-- gane title, platform and release date -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" ClipToBounds="True" Margin="12 10 18 0">
				<TextBlock Text="{Binding Title}" TextAlignment="Center" FontSize="20" FontWeight="SemiBold" Foreground="#ffffff" />
                <!-- <panel:OutlinedTextBlock Text="{Binding Title}" Fill="{Binding ForegroundBrush}" FontFamily="Oswald"
                    FontSize="{Binding TitleFontSize}" FontWeight="{Binding TitleFontWeight}" FontStyle="{Binding TitleFontStyle}"
                    TextWrapping="Wrap" TextAlignment="Center" Stroke="#CB0100" StrokeThickness="2" /> -->
					<TextBlock Text="{Binding PlatformReleaseDate}" TextAlignment="Center" FontWeight="SemiBold" FontSize="{Binding SmallFontSize}" Foreground="#a5a2a2" Margin="0 3 0 0" />
                <!-- <panel:OutlinedTextBlock Margin="0,3,0,0" Text="{Binding PlatformReleaseDate}" Fill="{Binding ForegroundBrush}" TextWrapping="Wrap"
                    FontFamily="{Binding SmallFontFamily}" FontSize="{Binding SmallFontSize}" FontWeight="Bold"
                    FontStyle="{Binding SmallFontStyle}" TextAlignment="Center" Stroke="#CB0100" StrokeThickness="1" /> -->
            </StackPanel>
            
            <TabControl Grid.ColumnSpan="2" Grid.Row="2" Background="Transparent" BorderThickness="0" Margin="0 15 0 15"
                cal:Message.Attach="[Event SelectionChanged] = [Action OnTabSelectionChanged($source, $eventArgs)]">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                    <ControlTemplate x:Key="DefaultHeaderTemplate" TargetType="TabItem">
                        <Border Background="Transparent">
                            <panel:OutlinedTextBlock x:Name="Text" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Margin="6,0"
                                                    Text="{TemplateBinding Header}"
                                                    FontWeight="Bold"
                                                    TextAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Text" Property="Fill" Value="#CB0100" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Text" Property="Fill" Value="#ffffff" />
                                <Setter TargetName="Text" Property="Opacity" Value="0.8" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="False" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Text" Property="Fill" Value="#CCCCCC" />
                                <Setter TargetName="Text" Property="Opacity" Value="1.0" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </TabControl.Resources>
                <TabControl.Style>
                    <Style TargetType="TabControl">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Game.Title}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Style>
                
                <!-- Overview -->
                <TabItem Header="{Binding OverviewLabel}">
                    <TabItem.Style>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Setter Property="Template" Value="{StaticResource DefaultHeaderTemplate}"/>
                        </Style>
                    </TabItem.Style>
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0">
                            <ScrollViewer.Template>
                                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                                    <Grid>
                                        <ScrollContentPresenter />
                                        <ScrollBar x:Name="PART_VerticalScrollBar" Value="{TemplateBinding VerticalOffset}"
                                            Maximum="{TemplateBinding ScrollableHeight}" ViewportSize="{TemplateBinding ViewportHeight}"
                                            Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" HorizontalAlignment="Right" />
                                    </Grid>
                                </ControlTemplate>
                            </ScrollViewer.Template>
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ScrollBar">
                                                <Track Name="PART_Track" IsDirectionReversed="true" Margin="0,0,0,0" ViewportSize="15">
                                                    <Track.Resources>
                                                        <system:Double x:Key="{x:Static SystemParameters.VerticalScrollBarButtonHeightKey}">120</system:Double>
                                                    </Track.Resources>
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Name="DecreaseRepeatButton" Command="ScrollBar.PageUpCommand"
                                                            Background="{Binding ControlsBackgroundBrush}" Focusable="False">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Grid>
                                                                        <Border Name="Border" Background="#00000000" BorderThickness="0" />
                                                                    </Grid>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#22FFFFFF" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Name="IncreaseRepeatButton" Command="ScrollBar.PageDownCommand"
                                                            Background="{Binding ControlsBackgroundBrush}" Focusable="False">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Grid>
                                                                        <Border Name="Border" Background="#00000000" />
                                                                    </Grid>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#22FFFFFF" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb Focusable="True" FocusVisualStyle="{StaticResource FocusVisualStyle}">
                                                            <Thumb.Template>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Border Name="Border"  Background="{Binding FadedForegroundBrush}" BorderThickness="0" />
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#99FFFFFF" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                                <ControlTemplate.Triggers>
                                                    <Trigger SourceName="PART_Track" Property="IsEnabled" Value="false">
                                                        <Setter TargetName="PART_Track" Property="Visibility" Value="Hidden"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <system:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">7</system:Double>
                            </ScrollViewer.Resources>
                            <StackPanel Orientation="Vertical" Margin="15,5,15,0">
                                <controls:Carousel Margin="0 0 0 15" Padding="0" MaxWidth="700" DataContext="{Binding Game}" VerticalAlignment="Top" HorizontalAlignment="Center"
                                        Background="Transparent" PreviewBackground="#CB0100" ItemSelectionBrush="#CB0100" ItemMouseOverBrush="#CB0100" ItemScale="0.8"
                                        ForceVideoPreview16X9="True">
                                    <controls:Carousel.ScrollBarStyle>
                                        <!-- Horizontal ScrollBar -->
                                        <Style x:Key="DefaultScrollBarStyle" TargetType="{x:Type ScrollBar}">
                                            <Setter Property="Margin" Value="0,15,0,0"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                                                        <Grid Visibility="{Binding ElementName=PART_Track, Path=Visibility}">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Horizontal ScrollBar -->
                                                            <Track x:Name="PART_Track" Grid.Column="1" IsDirectionReversed="False">
                                                                <Track.DecreaseRepeatButton>
                                                                    <RepeatButton Command="ScrollBar.PageLeftCommand">

                                                                        <!-- Left Side Background of the ScrollBar -->
                                                                        <RepeatButton.Style>
                                                                            <Style TargetType="{x:Type RepeatButton}">
                                                                                <Setter Property="Background" Value="#10FFFFFF"/>
                                                                                <Setter Property="Template">
                                                                                    <Setter.Value>
                                                                                        <ControlTemplate TargetType="RepeatButton">
                                                                                            <Grid>
                                                                                                <Border Name="Border" Background="{TemplateBinding Background}" BorderThickness="0"/>
                                                                                            </Grid>
                                                                                        </ControlTemplate>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#25FFFFFF"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </RepeatButton.Style>
                                                                    </RepeatButton>
                                                                </Track.DecreaseRepeatButton>

                                                                <!-- The main Track Thumb of the ScrollBar -->
                                                                <Track.Thumb>
                                                                    <Thumb Margin="0,1,0,1">
                                                                        <Thumb.Template>
                                                                            <ControlTemplate TargetType="Thumb">
                                                                                <Border Name="Border" Background="#999999" BorderThickness="0" />
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
